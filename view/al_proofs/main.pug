extends ../base.pug

block heading
  include header.pug
block main
  div.container
    div#editor
      include ../editor.pug
    div.side-element
      button#submit-button(data-endpoint="al_proofs/check") prüfen
      if raw.length > 0
        if error_string === null
          p Beweis ist korrekt.
        else
          p Fehler: #{error_string}.
  div
    a.inline.no-underline(href="al_proofs/instructions" target="_blank" rel="noopener noreferrer")
      button.inline(type="submit") Anleitung
    form.inline(action="al_proofs/reset" method="POST")
      button.inline(type="submit") zurücksetzen
  include ../editor_scripts.pug
