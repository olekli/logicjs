extends ../base.pug

block style
  include ../style-yes-no-exercise.css

block heading
  include header.pug
block main
  main.yes-no-exercise
    section.yes-no-exercise
      div.counter
        include counter.pug
      div.question
        include question.pug
      form.answer(action="al_AmodelsB/answer" method="POST")
        button.yes-button(type="submit" name="answer" value="true") wahr
        button.no-button(type="submit" name="answer" value="false") falsch
